rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Función auxiliar para verificar si un usuario es administrador
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin Intranet';
    }

    // --- Reglas para la colección 'users' ---
    match /users/{userId} {
      // Cualquiera autenticado puede leer perfiles (para el directorio).
      allow read: if request.auth != null;
      // Un usuario solo puede actualizar su propio perfil.
      allow update: if request.auth != null && request.auth.uid == userId;
      // Nadie puede crear o borrar usuarios desde la app.
      allow create, delete: if false;
    }

    // --- Reglas para la colección 'kitchen_menus' ---
    match /kitchen_menus/{menuId} {
      // Solo usuarios autenticados pueden leer y actualizar el menú (roles se validan en la app).
      allow read: if request.auth != null;
      allow update: if isAdmin();
      // Nadie puede crear o borrar menús desde la app.
      allow create, delete: if false;
    }

    // --- Reglas para la colección 'news_items' ---
    match /news_items/{newsId} {
      // Solo los usuarios autenticados pueden leer las noticias.
      allow read: if request.auth != null;
      // Solo usuarios autenticados pueden escribir (crear/actualizar/borrar).
      // La lógica de roles más específica está en la app.
      allow write, update, delete: if isAdmin();
    }

    // --- REGLA PARA CARPETAS Y SUS ARCHIVOS ---
    match /docs_folders/{folderId} {
      allow read: if request.auth != null;
      allow write, create, delete: if isAdmin();
      allow update: if false;
      // Regla para la subcolección de archivos
      match /files/{fileId} {
        allow read: if request.auth != null;
        allow write, delete, create, update: if isAdmin();
      }
    }

    // --- Reglas para la colección 'sites' ---
    match /sites/{siteId} {
        // Cualquiera puede leer los sitios de interés.
        allow read: if request.auth != null;
        // solo administradores puede crear o borrar sitios de interés desde la app.
        allow create, delete: if isAdmin();
        allow update: if false;
    }

    // --- Reglas para la colección 'photoAlbums' y su subcolección 'photos' ---
    match /photoAlbums/{albumId} {
      // Cualquiera autenticado puede ver los álbumes.
      allow read: if request.auth != null;
      // Solo los administradores pueden crear, actualizar y borrar álbumes.
      allow create, update, delete: if isAdmin();
      // --- Reglas para la SUBCOLECCIÓN 'photos' anidada ---
      match /photos/{photoId} {
        // Cualquier usuario autenticado puede leer las fotos de un álbum.
        allow read: if request.auth != null;
        // Solo los administradores pueden modificar o borrar fotos.
        allow create, update, delete: if isAdmin();
      }
    }
  }
}