rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Reglas para la colección 'users' ---
    match /users/{userId} {
      // Cualquiera autenticado puede leer perfiles (para el directorio).
      allow read: if request.auth != null;
      // Un usuario solo puede actualizar su propio perfil.
      allow update: if request.auth != null && request.auth.uid == userId;
      // Nadie puede crear o borrar usuarios desde la app.
      allow create, delete: if false;
    }

    // --- Reglas para la colección 'kitchen_menus' ---
    match /kitchen_menus/{menuId} {
      // Cualquiera puede leer el menú.
      allow read: if true;
      // Solo usuarios autenticados pueden actualizar el menú (roles se validan en la app).
      allow update: if request.auth != null;
       // Nadie puede crear o borrar menús desde la app.
      allow create, delete: if false;
    }

    // --- Reglas para la colección 'news_items' ---
    match /news_items/{newsId} {
        // Cualquiera puede leer las noticias.
        allow read: if true;
        // Solo usuarios autenticados pueden escribir (crear/actualizar/borrar).
        // La lógica de roles más específica está en la app.
        allow write: if request.auth != null;
    }

    // Nueva regla para la colección de carpetas de documentos
    match /docs_folders/{folderId} {
      allow read, write: if request.auth != null;
    }

    // --- Reglas para la colección 'sites' ---
    match /sites/{siteId} {
        // Cualquiera puede leer los sitios de interés.
        allow read, write: if request.auth != null;
    }
  }
}